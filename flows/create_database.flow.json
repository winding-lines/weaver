{
  "name": "create-database",
  "preconditions": [
    {"file_content": {
      "path": "Cargo.toml",
      "contains": "diesel"
    }}
  ],
  "actions": [
    "diesel setup --database-url $HOME/.weaver/history.sqlite3",
    "diesel migration run --database-url $HOME/.weaver/history.sqlite3",
    "diesel print-schema --database-url $HOME/.weaver/history.sqlite3 > weaver-db/src/backends/schema.rs"
  ]
}
